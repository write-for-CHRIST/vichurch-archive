{
  "name": "vichurch",
  "version": "0.1.0",
  "description": "Church platform solution for Christian leaders.",
  "main": "index.js",
  "repository": "git@github.com:write-for-CHRIST/vichurch.git",
  "author": "Nam Pham <nampdn@protonmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "chmod": "chmod +x ./tools/*.sh",
    "preinstall": "npm run chmod && ./tools/setup.sh",
    "build": "nodenv -E build.env -e 'docker-compose build'",
    "start": "docker-compose up",
    "down": "docker-compose down",
    "exec:app": "docker-compose exec client_app",
    "exec:graph": "docker-compose exec server_graph",
    "exec:importer": "docker-compose exec server_importer",
    "attach:app": "yarn exec:app /bin/sh",
    "attach:graph": "yarn exec:graph /bin/sh",
    "attach:importer": "yarn exec:importer /bin/sh",
    "restart:app": "docker-compose restart client_app",
    "restart:graph": "docker-compose restart server_graph",
    "restart:importer": "docker-compose restart server_importer",
    "add:app": "docker-compose run --rm --no-deps client_app yarn add",
    "add:graph": "docker-compose run --rm --no-deps server_graph yarn add",
    "add:importer": "docker-compose run --rm --no-deps server_graph yarn add",
    "deploy:graph": "cd server/graph && prisma deploy"
  },
  "devDependencies": {
    "node-env-run": "^3.0.2"
  }
}
